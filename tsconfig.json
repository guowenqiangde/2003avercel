{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
        "esModuleInterop":true,
        "lib": ["ES2015","dom","es2015.collection"]
    },
    "include": [
        "./**/*.*",
        "./shims-vue.d.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "types": [
        "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": "true"
}